@model PcBuilder.Web.ViewModels.Home.HomePageViewModel

<head>
	<link href="~/css/home.css" rel="stylesheet" />
</head>
<div class="container">
	<div class="welcome-message">
		<p>Welcome to our PC Builder store! Browse through our featured products below.</p>
	</div>

	<div class="products-header">
		<h2>Featured Products</h2>
	</div>

	<div class="product-container">
		@foreach (var product in Model.Products)
		{
			<div class="product-card">
				<a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="card-link">
					<img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" />
				</a>
				<div class="product-name">@product.ProductName</div>
				<div class="product-price">$@product.ProductPrice</div>
			</div>
		}
	</div>

	<div class="text-center mt-4">
		<a class="btn" asp-area="" asp-controller="Product" asp-action="Index">Go to Products</a>
	</div>
</div>