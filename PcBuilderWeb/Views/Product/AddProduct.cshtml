@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PcBuilder.Data.Models
@using PcBuilder.Data.Models.Enums
@using PcBuilder.Web.ViewModels.Product
@model AddProductViewModel

<h2>Add a New Product</h2>

<form asp-action="AddProduct" method="post">
    <div>
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="mb-3">
	    <label asp-for="CategoryId" class="form-label">Category</label>
	    <select asp-for="CategoryId" class="form-select">
		    <option value="" disabled selected>Select Category</option>
		    @foreach (var category in Enum.GetValues(typeof(CategoryType)).Cast<CategoryType>())
		    {
			    <option value="@((int)category)">@category.ToString()</option>
		    }
	    </select>
	    <span asp-validation-for="CategoryId" class="text-danger small"></span>
    </div>

    <div class="mb-3">
	    <label asp-for="ManufacturerId" class="form-label">Manufacturer</label>
	    <select asp-for="ManufacturerId" class="form-select">
		    <option value="" disabled selected>Select Manufacturer</option>
		    @foreach (var manufacturer in Enum.GetValues(typeof(ManufacturerType)).Cast<ManufacturerType>())
		    {
			    <option value="@((int)manufacturer)">@manufacturer.ToString()</option>
		    }
	    </select>
	    <span asp-validation-for="ManufacturerId" class="text-danger small"></span>
    </div>

    <div>
        <label asp-for="StockQuantity">Quantity</label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ProductPrice">Product Price</label>
        <input asp-for="ProductPrice" class="form-control" />
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ProductDescription">Product Description</label>
        <textarea asp-for="ProductDescription" class="form-control"></textarea>
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ImageUrl">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Add Product</button>
</form>